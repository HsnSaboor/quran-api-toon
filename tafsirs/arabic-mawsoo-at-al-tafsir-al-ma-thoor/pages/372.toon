tafsir[25]{c,v,t}:
  26,112,"﴿قَالَ وَمَا عِلۡمِی بِمَا كَانُوا۟ یَعۡمَلُونَ ۝١١٢﴾ - تفسير٥٦١٤٩- قال مقاتل بن سليمان: ﴿قال﴾ نوح ﵇: ﴿وما علمي بما كانوا يعملون﴾ يقول: لم أكن أعلم أنّ الله يهديهم للإيمان مِن بينكم، ويَدَعُكُم![[تفسير مقاتل بن سليمان ٣/٢٧٢.]]. (ز)٥٦١٥٠- عن أصبغ، قال: سمعتُ عبد الرحمن بن زيد بن أسلم في قول الله: ﴿يعملون﴾، قال: يعملون ويصنعون واحد[[أخرجه ابن أبي حاتم ٨/٢٧٨٨.]]. (ز)٥٦١٥١- قال يحيى بن سلّام: ﴿وما علمي بما كانوا يعملون﴾، أي: بما يعملون، إنّما أقبل منهم الظاهر، وليس لي بباطن أمرهم عِلْمٌ[[تفسير يحيى بن سلّام ٢/٥١٢.]]. (ز)"
  26,113,"﴿إِنۡ حِسَابُهُمۡ إِلَّا عَلَىٰ رَبِّیۖ لَوۡ تَشۡعُرُونَ ۝١١٣﴾ - تفسير٥٦١٥٢- تفسير إسماعيل السُّدِّيّ: ﴿إن حسابهم﴾، يعني: ما جزاؤهم[[تفسير يحيى بن سلّام ٢/٥١٢.]]. (ز)٥٦١٥٣- عن عبد الملك ابن جُرَيْج -من طريق حجّاج- ﴿إن حسابهم إلا على ربي﴾، قال: هو أعلم بما في أنفسهم[[أخرجه ابن جرير ١٧/٦٠٣. وعزاه السيوطي إلى ابن المنذر.]]. (١١/٢٧٨)٥٦١٥٤- قال مقاتل بن سليمان: ثم قال نوح ﵇: ﴿إن حسابهم﴾ يعني: ما جزا[ؤهم] ﴿إلا على ربي لو تشعرون﴾[[تفسير مقاتل بن سليمان ٣/٢٧٢.]]. (ز)﴿إِنۡ حِسَابُهُمۡ إِلَّا عَلَىٰ رَبِّیۖ لَوۡ تَشۡعُرُونَ ۝١١٣﴾ - آثار متعلقة بالآية٥٦١٥٥- عن زِرّ بن حُبَيْشٍ، قال: شهدتُ صاحبَنا وابصةَ بن معبد، وسمع رجلين يتنازعان في أهل العراق وأهل الشام، يعيب أحدُهما هؤلاء، ويعيب الآخرُ هؤلاء. قال وابصة: فهلّا يقولون غير ذلك! قال: وما نقول؟ قال: يقولان: ﴿إن حسابهم إلا على ربي لو تشعرون﴾[[أخرجه ابن أبي حاتم ٨/٢٧٨٩.]]. (ز)"
  26,114,"﴿وَمَاۤ أَنَا۠ بِطَارِدِ ٱلۡمُؤۡمِنِینَ ۝١١٤ إِنۡ أَنَا۠ إِلَّا نَذِیرࣱ مُّبِینࣱ ۝١١٥﴾ - تفسير٥٦١٥٦- عن عبد الله بن عباس -من طريق عكرمة- ﴿نذير﴾، قال: نذير مِن النار[[أخرجه ابن أبي حاتم ٨/٢٧٨٩.]]. (ز)٥٦١٥٧- قال مقاتل بن سليمان: ﴿وما أنا بطارد المؤمنين﴾ يقول: وما أنا بالذي لا يقبل الإيمان مِن الذين تزعمون أنهم الأرذلون عندكم، ﴿إن أنا﴾ يعني: ما أنا ﴿إلا نذير مبين﴾ يعني: رسول بَيِّن[[تفسير مقاتل بن سليمان ٣/٢٧٢.]]. (ز)٥٦١٥٨- قال يحيى بن سلّام: ﴿وما أنا بطارد المؤمنين (١١٤)﴾ يعنيهم[[تفسير يحيى بن سلّام ٢/٥١٢.]]. (ز)"
  26,115,"26:114"
  26,116,"﴿قَالُوا۟ لَىِٕن لَّمۡ تَنتَهِ یَـٰنُوحُ لَتَكُونَنَّ مِنَ ٱلۡمَرۡجُومِینَ ۝١١٦﴾ - تفسير٥٦١٥٩- عن عبد الله بن عباس، في قوله: ﴿لتكونن من المرجومين﴾، قال: مِن المقتولين[[تفسير الثعلبي ٧/١٧٣.]]. (ز)٥٦١٦٠- عن الضحاك بن مُزاحِم، في قوله: ﴿لتكونن من المرجومين﴾، قال: مِن المشتومين[[تفسير البغوي ٦/١٢١. وتصحَّفت في تفسير الثعلبي ٧/١٧٣ إلى: المشؤومين.]]. (ز)٥٦١٦١- عن الحسن البصري -من طريق النضر أبي محمد- ﴿لتكونن من المرجومين﴾، قال: تواعدوه بالقتل[[أخرجه ابن أبي حاتم ٨/٢٧٨٩.]]. (١١/٢٧٨)٥٦١٦٢- عن زيد بن أسلم، نحو ذلك[[علَّقه ابن أبي حاتم ٨/٢٧٨٩.]]. (ز)٥٦١٦٣- عن قتادة بن دعامة، في قوله: ﴿لتكونن من المرجومين﴾، قال: بالحجارة[[أخرجه ابن أبي حاتم ٨/٢٧٨٩. وعلَّقه يحيى بن سلّام ٢/٥١٢. وعزاه السيوطي إلى عبد بن حميد، وابن المنذر.]]. (١١/٢٧٨)٥٦١٦٤- عن إسماعيل السُّدِّيّ، ﴿لتكونن من المرجومين﴾، قال: بالشتيمة[[أخرجه ابن أبي حاتم ٨/٢٧٨٩.]]. (١١/٢٧٨)٥٦١٦٥- قال [أبو حمزة] الثمالي: كل شيء في القرآن مِن ذكر المرجومين فإنّه يعني بذلك: القتل؛ إلا التي في سورة مريم [٤٦]: ﴿لئن لم تنته لأرجمنك﴾، فإنّه يعني: لأشتمنَّك[[تفسير الثعلبي ٧/١٧٣.]]. (ز)٥٦١٦٦- قال محمد بن السائب الكلبي: مِن المقتولين بالحجارة[[تفسير البغوي ٦/١٢١.]]. (ز)٥٦١٦٧- قال مقاتل بن سليمان: ﴿قالوا لئن لم تنته﴾ يعني: لئن لم تسكت ﴿يا نوح﴾ عنّا؛ ﴿لتكونن من المرجومين﴾ يعني: مِن المقتولين[[تفسير مقاتل بن سليمان ٣/٢٧٢. وآخره في تفسير الثعلبي ٧/١٧٣، وتفسير البغوي ٦/١٢١ منسوبًا إلى مقاتل دون تعيينه.]]. (ز)٥٦١٦٨- قال يحيى بن سلّام: ﴿قالوا لئن لم تنته يا نوح﴾ عما تدعونا إليه، وعن ذمِّ آلهتنا وشتمها. ﴿لتكونن من المرجومين﴾ قال قتادة: بالحجارة، فلنقتلنَّك بها[[تفسير يحيى بن سلّام ٢/٥١٢.]]٤٨١١. (ز)٤٨١١ ذكر ابنُ عطية (٦/٤٩٦) أن قولهم: ﴿مِنَ المَرْجُومِينَ﴾ يحتمل أن يريدوا: بالحجارة، ويحتمل أن يريدوا: بالقول والشتم ونحوه، ثم علَّق على الاحتمال الثاني بقوله: «وهو شبيه برجم الحجارة، وهو من الرجم بالغيب والظن ونحو ذلك»."
  26,117,"﴿قَالَ رَبِّ إِنَّ قَوۡمِی كَذَّبُونِ ۝١١٧﴾ - تفسير٥٦١٦٩- قال مقاتل بن سليمان: ﴿قال﴾ نوح: ﴿رب إن قومي كذبون﴾ البعث[[هكذا في تفسير مقاتل بن سليمان ٣/٢٧٢.]]. (ز)"
  26,118,"﴿فَٱفۡتَحۡ بَیۡنِی وَبَیۡنَهُمۡ فَتۡحࣰا وَنَجِّنِی وَمَن مَّعِیَ مِنَ ٱلۡمُؤۡمِنِینَ ۝١١٨﴾ - تفسير٥٦١٧٠- عن عبد الله بن عباس -من طريق قتادة- قال: ما كنتُ أدري ما قوله: ﴿افتح بيننا وبين قومنا بالحق﴾ [الأعراف:٨٩]، حتى سمعت ابن ذي يزن يقول: تعالي أُفاتحك. يعني: تعال أُخاصمك[[أخرجه ابن أبي حاتم ٨/٢٧٩٠.]]. (ز)٥٦١٧١- عن قتادة بن دعامة -من طريق مَعْمَر- في قوله: ﴿فافتح بيني وبينهم فتحا﴾، قال: اقضِ بيني وبينهم قضاءً[[أخرجه عبد الرزاق ٢/٧٤، وابن جرير ١٧/٦٠٤، وابن أبي حاتم ٨/٢٧٩٠ من طريق سعيد. وعلَّقه يحيى بن سلّام ٢/٥١٣. وعزاه السيوطي إلى عبد بن حميد.]]. (١١/ ٢٧٨)٥٦١٧٢- عن أبي صالح [باذام]، مثله[[عزاه السيوطي إلى ابن المنذر.]]. (١١/ ٢٧٨)٥٦١٧٣- عن إسماعيل السُّدِّيّ، نحوه[[علَّقه ابن أبي حاتم ٨/٢٧٩٠.]]. (ز)٥٦١٧٤- قال مقاتل بن سليمان: ﴿فافتح بيني وبينهم فتحا﴾ يقول: اقض بيني وبينهم قضاءً، يعني: العذاب، ﴿ونجني ومن معي من المؤمنين﴾ مِن الغرق، فنجّاه الله ﷿[[تفسير مقاتل بن سليمان ٣/٢٧٢.]]. (ز)٥٦١٧٥- عن عبد الرحمن بن زيد بن أسلم -من طريق ابن وهب- في قوله: ﴿فافتح بيني وبينهم فتحا﴾، قال: اقضِ بيني وبينهم[[أخرجه ابن جرير ١٧/٦٠٤. وعلَّقه ابن أبي حاتم ٨/٢٧٩٠.]]. (ز)٥٦١٧٦- قال يحيى بن سلّام: ﴿ونجني ومن معي من المؤمنين﴾، والفتح: القضاء. وإذا قضى الله بين النبيِّ وقومه هلكوا، وهذا حيثُ أمر بالدعاء عليهم، فاستجيب له، فأهلكهم الله، ونجّاه ومَن معه من المؤمنين[[تفسير يحيى بن سلّام ٢/٥١٣.]]. (ز)"
  26,119,"﴿فَأَنجَیۡنَـٰهُ وَمَن مَّعَهُۥ فِی ٱلۡفُلۡكِ﴾ - تفسير٥٦١٧٧- عن أبي مالك غزوان الغفاري -من طريق السُّدِّيّ- ﴿في الفلك المشحون﴾، قال: سفينة حمل فيها مِن كل زوجين اثنين[[أخرجه ابن أبي حاتم ٨/٢٧٩١.]]. (ز)٥٦١٧٨- عن أبي صالح [باذام]، ﴿في الفلك المشحون﴾، قال: سفينة نوح[[علَّقه ابن أبي حاتم ٨/٢٧٩١. وعزاه السيوطي إلى عبد بن حميد.]]. (١١/٢٨٠)٥٦١٧٩- عن الضحاك بن مزاحم= (ز)٥٦١٨٠- وقتادة بن دعامة، نحو ذلك[[علَّقه ابن أبي حاتم ٨/٢٧٩١.]]. (ز)﴿ٱلۡمَشۡحُونِ ۝١١٩﴾ - تفسير٥٦١٨١- عن عبد الله بن عباس: أنّ نافع بن الأزرق قال له: أخبِرني عن قوله ﷿: ﴿الفلك المشحون﴾. قال: السفينة المُوقَرة[[المُوقَرة: المثْقَلة، من الوِقر -بكسر الواو-: الحِمْل. النهاية (وقر).]] الممتلئة. قال: وهل تعرف العرب ذلك؟ قال: نعم، أما سمعت قول عبيد بن الأبرص:شَحَنّا أرضهم بالخيل حتى تركناهم أذلَّ من الصِّراطِ؟[[أخرجه الطستي -كما في الإتقان ٢/٨٠-.]]. (١١/٢٧٨)٥٦١٨٢- عن عبد الله بن عباس -من طريق علي- في قوله: ﴿الفلك المشحون﴾، قال: المُمْتَلِئ[[أخرجه ابن جرير ١٩/٤٤٢، وابن أبي حاتم -كما في الإتقان ٢/٣٩-.]]. (١١/٢٧٩)٥٦١٨٣- عن عبد الله بن عباس -من طريق العوفي- أنّه قال: تدرون ما المشحون؟ قلنا: لا. قال: هو المُوقَر[[أخرجه ابن جرير ١٧/٦٠٤-٦٠٥، وابن أبي حاتم ٨/٢٧٩١ من طريق سعيد بن جبير. وعزاه السيوطي إلى ابن أبي شيبة، وابن المنذر.]]. (١١/٢٧٩)٥٦١٨٤- عن عبد الله بن عباس -من طريق العوفي- قال: المُثْقَل[[أخرجه ابن جرير ١٩/٤٤٢.]]. (١١/٢٨٠)٥٦١٨٥- عن مجاهد بن جبر -من طريق ابن أبي نجيح، وابن جُرَيْج- في قوله: ﴿الفلك المشحون﴾، قال: المملوء المفروغ منه تحميلًا[[أخرجه ابن جرير ١٧/٦٠٥، وابن أبي حاتم ٨/٢٧٩٢. وعزاه السيوطي إلى الفريابي، وابن أبي شيبة، وعبد بن حميد، وابن المنذر.]]. (١١/٢٧٩)٥٦١٨٦- عن عامر الشعبي، ﴿في الفلك المشحون﴾، قال: المُثْقَل[[عزاه السيوطي إلى سعيد بن منصور، وعبد بن حميد، وابن المنذر.]]. (١١/٢٨٠)٥٦١٨٧- عن الحسن البصري -من طريق أبي مودود- في قوله: ﴿الفلك المشحون﴾، قال: المستدير[[أخرجه الثوري في تفسيره ص٢٢٩.]]. (ز)٥٦١٨٨- عن عطاء، في قوله: ﴿المشحون﴾، قال: المثقل[[تفسير الثعلبي ٧/١٧٣.]]. (ز)٥٦١٨٩- عن قتادة بن دعامة -من طريق معمر- ﴿في الفلك المشحون﴾، قال: المحمَّل[[أخرجه عبد الرزاق ٢/٧٤، وابن جرير ١٧/٦٠٥. وعزاه السيوطي إلى عبد بن حميد.]]. (١١/٢٧٩)٥٦١٩٠- عن قتادة بن دعامة: ﴿في الفلك المشحون﴾، كُنّا نُحَدَّث: أنّه الموقر[[علَّقه ابن أبي حاتم ٨/٢٧٩١. وعزاه السيوطي إلى عبد بن حميد.]]. (١١/٢٧٩)٥٦١٩١- قال مقاتل بن سليمان: ﴿فأنجيناه ومن معه في الفلك المشحون﴾، يعني: الموقر مِن الناس والطير والحيوان كلها، من كل صنف ذكر وأنثى[[تفسير مقاتل بن سليمان ٣/٢٧٣.]]. (ز)٥٦١٩٢- قال يحيى بن سلّام: ﴿فأنجيناه ومن معه في الفلك المشحون﴾، والمشحون: الموقر بحمله مما حمل نوح في السفينة من كل زوجين اثنين، ومَن معه من المؤمنين، كان معه امرأته وثلاثة بنين له: سام، وحام، ويافث، ونساؤهم، فجميعهم ثمانية[[تفسير يحيى بن سلّام ٢/٥١٣.]]. (ز)"
  26,120,"﴿ثُمَّ أَغۡرَقۡنَا بَعۡدُ ٱلۡبَاقِینَ ۝١٢٠ إِنَّ فِی ذَ ٰ⁠لِكَ لَـَٔایَةࣰۖ وَمَا كَانَ أَكۡثَرُهُم مُّؤۡمِنِینَ ۝١٢١ وَإِنَّ رَبَّكَ لَهُوَ ٱلۡعَزِیزُ ٱلرَّحِیمُ ۝١٢٢﴾ - تفسير٥٦١٩٣- قال مقاتل بن سليمان: ﴿ثم أغرقنا بعد﴾ أهل السفينة ﴿الباقين﴾ يعني: مَن بقي منهم مِمَّن لم يركب السفينة، ﴿إن في ذلك لآية﴾ يقول: إنّ في هلاك قوم نوح لعبرة لِمَن بعدهم مِن هذه الأمة، ليحذروا مثل عقوبتهم. ثم قال تعالى: ﴿وما كان أكثرهم مؤمنين﴾ يعني: مُصَدِّقين بتوحيد الله ﷿. يقول: كان أكثرهم كافرين بالتوحيد، ولو كان أكثرهم مؤمنين لم يُعَذَّبوا في الدنيا. ثم قال سبحانه: ﴿وإن ربك لهو العزيز﴾ في نِقْمَته منهم بالغرق، ﴿الرحيم﴾ بالمؤمنين إذ نَجّاهم من الغرق، إنّما ذكر الله تعالى تكذيب الأمم الخالية رسلهم لَمّا كذَّب كُفّار قريش النبيَّ ﷺ بالرسالة، أخبر الله ﷿ النبيَّ ﷺ أنه أرسله كما أرسل نوحًا وهودًا وصالحًا ولوطًا وشعيبًا، فكذبهم قومهم، فكذلك أنت، يا محمد. وذكر عقوبة الذين كذبوا رسلهم لئلا يُكَذِّب كفار قريش محمدًا ﷺ، فحذَّرهم مثلَ عذاب الأمم الخالية[[تفسير مقاتل بن سليمان ٣/٢٧٣.]]. (ز)٥٦١٩٤- قال يحيى بن سلّام: ﴿ثم أغرقنا بعد﴾ من أنجينا في السفينة ﴿الباقين﴾ وهم قوم نوح، وفيها تقديم، ثم أغرقنا الباقين بعد[[تفسير يحيى بن سلّام ٢/٥١٣.]]. (ز)"
